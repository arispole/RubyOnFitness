<!DOCTYPE html>
<html>
  <head>
    <title>RubyOnFitness</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>

	<%= yield %>
	<% unless flash.empty? %>
      <script type="text/javascript">
        <% flash.each do |f| %>
          <% if f[0] == 'notice' %>
            toastr.success('<%= f[1] %>', '', {"iconClass": 'customer-info-notice'});
          <% else %>
            toastr.success('<%= f[1] %>', '', {"iconClass": 'customer-info-alert'});
          <% end %>        
        <% end %>
      </script>
    <% end %>
  </body>
</html>

